<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <EditText
        android:id="@+id/editInjuryDetails"
        android:inputType="text"
        android:singleLine="true"
        android:background="@drawable/grid_back"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Injury Details" />

    <EditText
        android:id="@+id/editSex"
        android:background="@drawable/grid_back"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:paddingBottom="10dp"
        android:paddingRight="15dp"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editInjuryDetails"
        android:hint="Sex" />

    <EditText
        android:id="@+id/editAge"
        android:singleLine="true"
        android:background="@drawable/grid_back"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="15dp"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editSex"
        android:hint="Age" />
    <EditText
        android:id="@+id/editContact"
        android:singleLine="true"
        android:background="@drawable/grid_back"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="15dp"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editAge"
        android:hint="Contact" />
    <EditText
        android:id="@+id/editBG"
        android:singleLine="true"
        android:background="@drawable/grid_back"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="15dp"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editContact"
        android:hint="Blood Group(optional)" />

    <Button
        android:id="@+id/chseDoc"
        android:background="@android:color/holo_purple"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:text="Choose Image"
        android:layout_below="@id/editBG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:id="@+id/AccidentImage"
        android:layout_above="@id/btnSend"
        android:layout_below="@id/chseDoc"/>

    <Button
        android:id="@+id/btnSend"
        android:background="@android:color/holo_purple"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND" />



</RelativeLayout>