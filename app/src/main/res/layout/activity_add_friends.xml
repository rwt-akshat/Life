<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@android:color/holo_purple"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.akrwt.arogya.fragments.DashboardFragment.Impact.AddFriendsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/layout_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/etName1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter name 1"
            android:singleLine="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/etPhone1"
            android:hint="Enter phone number"
            android:inputType="phone"
            android:singleLine="true" />

        <EditText
            android:id="@+id/etName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter name 2"
            android:singleLine="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etPhone2"
            android:layout_margin="10dp"
            android:hint="Enter phone number"
            android:inputType="phone"
            android:singleLine="true" />

        <EditText
            android:id="@+id/etName3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter name 3"
            android:singleLine="true" />

        <EditText
            android:id="@+id/etPhone3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter phone number"
            android:inputType="phone"
            android:singleLine="true" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_purple"
            android:text="Save"/>

    </LinearLayout>


</LinearLayout>
